@using WebTest.Data.Tests
@model IEnumerable<WebTest.Data.Tests.TestEntity>

@{
    ViewData["Title"] = "My Tests";

    string jsonEncodedArray = System.Text.Json.JsonSerializer.Serialize(Model);
}

<style>
    .chart{
        min-width: 50%;
    }
</style>

<div class="container text-center">
    <div class="row mb-5 justify-content-center">
        <div class="col-4">
            <h1>My Tests [Graph]</h1>
        </div>
        <div class="col-6"></div>
        <div class="col-2 mt-2">
            <a asp-action="Index"><button class="btn btn-secondary">Back to list</button></a>
        </div>
    </div>
    <hr />
    <h2 class="mb-5">Pulse, Saturation, Weight, Height</h2>
    <div style="display: flex; flex-wrap: wrap; justify-content: center;">
        <div class="chart">
            <canvas id="PulseChart"></canvas>
        </div>
        <div class="chart">
            <canvas id="SaturationChart"></canvas>
        </div>
        <div class="chart">
            <canvas id="WeightChart"></canvas>
        </div>
        <div class="chart">
            <canvas id="HeightChart"></canvas>
        </div>
    </div>
    <hr />
    <h2 class="mb-5">Body Measure</h2>
    <div style="display: flex; flex-wrap: wrap; justify-content: center;">
        <div class="chart">
            <canvas id="NeckChart"></canvas>
        </div>
        <div class="chart">
            <canvas id="ArmChart"></canvas>
        </div>
        <div class="chart">
            <canvas id="ForearmChart"></canvas>
        </div>
        <div class="chart">
            <canvas id="ChestChart"></canvas>
        </div>
        <div class="chart">
            <canvas id="WaistChart"></canvas>
        </div>
        <div class="chart">
            <canvas id="HipsChart"></canvas>
        </div>
        <div class="chart">
            <canvas id="ThighsChart"></canvas>
        </div>
        <div class="chart">
            <canvas id="CalfChart"></canvas>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    var dataArray = @Html.Raw(jsonEncodedArray);
</script>
<script src="~/js/graph.js"></script>
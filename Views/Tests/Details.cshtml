@model WebTest.Data.Tests.TestEntity

@{
    ViewData["Title"] = "Details";
}


<div class="container">
    <h1>Details</h1>

    <hr />
    <div>
        <dl class="row">
            <dt class = "col-sm-2">
                Name
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class = "col-sm-2">
                Date
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Date)
            </dd>
            <dt class = "col-sm-2">
                Description
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class = "col-sm-2">
                Test type
            </dt>
            <dd class="col-sm-10 TestTypeDisplay">@Html.DisplayFor(model => model.TestType)</dd>
            <dt class="col-sm-2 BodyMeasure">
                Body Measure
            </dt>
            <dd class="col-sm-10 BodyMeasure">
                @Html.DisplayFor(model => model.BodyMeasure)
            </dd>
            <dt class = "col-sm-2">
                Value
            </dt>
            <dd class="col-sm-10 ValueDisplay">
                @Html.DisplayFor(model => model.Value)
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model?.Id"><button class="btn btn-warning">Edit</button></a>
        <br />
        <a asp-action="Index"><button class="btn btn-secondary mt-2">Back to list</button></a>
    </div>
</div>


<script src="~/js/tests.js"></script>
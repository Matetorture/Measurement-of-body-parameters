@model WebTest.Data.Tests.TestEntity

@{
    ViewData["Title"] = "Delete";
}
<div class="container">
    <h1>Delete</h1>

    <h3 class="text-danger">Are you sure you want to delete this?</h3>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Name
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                Date
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Date)
            </dd>
            <dt class="col-sm-2">
                Description
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-2">
                Test Type
            </dt>
            <dd class="col-sm-10 TestTypeDisplay">@Html.DisplayFor(model => model.TestType)</dd>
            <dt class="col-sm-2 BodyMeasure">
                Body Measure
            </dt>
            <dd class="col-sm-10 BodyMeasure">
                @Html.DisplayFor(model => model.BodyMeasure)
            </dd>
            <dt class="col-sm-2">
                Value
            </dt>
            <dd class="col-sm-10 ValueDisplay">
                @Html.DisplayFor(model => model.Value)
            </dd>
        </dl>
    
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index"><button type="button" class="btn btn-secondary">Back to list</button></a>
        </form>  
    </div>
</div>


<script src="~/js/tests.js"></script>
@model WebTest.Models.Dashboard.DashboardIndexVM
@{
    ViewData["Title"] = "Dashboard";
}

<div class="row text-center text-white" style="min-height: 500px;">
    <div class="col-md-4 bg-primary bg-gradient rounded d-flex align-items-center justify-content-center my-2">
        <div>
            @if (Model.User.FirstName == null && Model.User.LastName == null)
            {
                <a asp-controller="Profile" asp-action="Edit"><button class="btn btn-light mt-2">Start by adding <b><u>first name</u></b> and <b><u>last name</u></b></button></a>
                <br />
            }
            else
            {
                <p class="h5">Welcome, @Model.User.FirstName @Model.User.LastName</p>
            }
            <br />
            @if (Model.User.Profile == null)
            {
                <a asp-controller="Profile" asp-action="Index"><button class="btn btn-dark mt-2 text-white">Add your <b><u>Profile</u></b></button></a>
                <br />
                <br />
            }
            @if(Model.User.Tests.Count == 0)
            {
                <a asp-controller="Tests" asp-action="Create"><button class="btn btn-info mt-2 text-white">Add your first <b><u>test</u></b></button></a>
                <br />
            }
            else
            {
                <h3>TESTS</h3>
                <p>
                    <b>Number of tests:</b> @Model.User.Tests.Count <br>
                    <b>Last test:</b> @Model.LastTestDate <br>
                </p>
            }
            <br />
            @if (Model.User.Devices.Count == 0)
            {
                <a asp-controller="Devices" asp-action="Create"><button class="btn btn-info mt-2 text-white">Add your first <b><u>device</u></b></button></a>
            }
            else
            {
                <h3>DEVICES</h3>
                <p>
                    <b>Number of connected devices:</b> @Model.ConnectedDevices/@Model.User.Devices.Count <br>
                </p>
            }
        </div>
    </div>
    <div class="col-md-8">
        <div class="row h-50">
            <div class="col-md-5 bg-warning bg-gradient m-2 rounded">
                <a class="text-decoration-none text-white" asp-area="" asp-controller="Tests" asp-action="Index">
                    <div class="d-flex align-items-center justify-content-center" style="width: 100%; height: 100%;">
                        <div>
                            <img src="icons/view.svg" width="120" />
                            <br />
                            My tests
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-md-5 bg-success bg-gradient m-2 rounded">
                <a class="text-decoration-none text-white" asp-area="" asp-controller="Tests" asp-action="Create">
                    <div class="d-flex align-items-center justify-content-center" style="width: 100%; height: 100%;">
                        <div>
                            <img src="icons/add.svg" width="120" />
                            <br />
                            Create new test
                        </div>
                    </div>
                </a>
            </div>
        </div>
        <div class="row h-50">
            <div class="col-md-5 bg-info bg-gradient m-2 rounded">
                <a class="text-decoration-none text-white" asp-area="" asp-controller="Devices" asp-action="Index">
                    <div class="d-flex align-items-center justify-content-center" style="width: 100%; height: 100%;">
                        <div>
                            <img src="icons/devices.svg" width="120" />
                            <br />
                            Devices
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-md-5 bg-secondary bg-gradient m-2 rounded">
                <a class="text-decoration-none text-white" asp-area="" asp-controller="Profile" asp-action="Index">
                    <div class="d-flex align-items-center justify-content-center" style="width: 100%; height: 100%;">
                        <div>
                            <img src="icons/profile.svg" width="120" />
                            <br />
                            Profile
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </div>
</div>
@using WebTest.Data.Profiles
@model WebTest.Models.Users.UsersIndexVM

@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <h1>Edit</h1>

    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Profile.Id" />
                <input type="hidden" asp-for="Profile.UserId" />
                <div class="form-group">
                    <label asp-for="User.FirstName" class="control-label"></label>
                    <input asp-for="User.FirstName" class="form-control" />
                    <span asp-validation-for="User.FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Profile.BloodType" class="control-label"></label>
                    <select asp-for="Profile.BloodType" asp-items="Html.GetEnumSelectList<BloodType>()" class="form-control">
                        <option value="">-- Select --</option>
                    </select>
                    <span asp-validation-for="Profile.BloodType" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Profile.Rh" /> @Html.DisplayNameFor(model => model.Profile.Rh)
                    </label>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-success mt-2" />
                </div>
            </form>
            <a asp-action="Index"><button class="btn btn-secondary mt-2">Back to list</button></a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
